package psl.chime4.server.data;

import psl.chime4.server.base.ChimeException;

/**
 * Indicates that an error occurred while accessing a backing data store.
 *
 * @author Mark Ayzenshtat
 */
public class DataAccessException extends ChimeException {
	/**
	 * Constructs a <code>DataAccessException</code> with the specified
	 * detail message.
	 *
	 * @param iMessage the detail message
	 */
	public DataAccessException(String iMessage) {
		super(iMessage);
	}
	
	/**
	 * Constructs a <code>DataAccessException</code> with the specified
	 * underlying cause.
	 *
	 * @param iCause the underlying cause
	 */
	public DataAccessException(Throwable iCause) {
		super(iCause);
	}

	/**
	 * Constructs a <code>DataAccessException</code> with the specified
	 * detail message and underlying cause.
	 *
	 * @param iMessage the detail message
	 * @param iCause the underlying cause
	 */
	public DataAccessException(String iMessage, Throwable iCause) {
		super(iMessage, iCause);
	}
}
